<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.firebase.example.fireeats">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="androidx.multidex.MultiDexApplication">

        <activity
            android:name=".java.MainActivity"
            android:theme="@style/AppTheme.Activity">
        </activity>

        <activity
            android:name=".java.tuan.ShoppingProductGrid"
            android:theme="@style/AppTheme.Activity" />
        <activity android:name=".java.tuan.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".java.tuan.ShoppingCartSimple"
            android:screenOrientation="portrait" />
        <activity
            android:name=".java.tuan.ShoppingProductAdvDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".java.tuan.ShoppingCheckoutStep"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".java.tuan.ShoppingCheckoutTimeline"
            android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>
